#!/bin/sh
# postinst script for cql-metrics-collector
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <new-postinst> `abort-remove' <old version>
#        * <new-postinst> `abort-deconfigure' <old version>
#        * <conflictor's-postinst> `abort-install' <conflicting package>
#        * <postinst> `abort-remove' `0'
#        * <postinst> `abort-deconfigure' `0'
#        * <postinst> `abort-upgrade' `0'
#        * <postinst> `abort-install' `0'
#        * <postinst> `abort-upgrade' <most-recently-configured-version>
#        * <postinst> `abort-remove' <new version>
#        * <postinst> `abort-deconfigure' <new version>
#        * <conflictor's-postinst> `abort-install' <conflicting package>

case "$1" in
    configure)
        # Add system user and group
        adduser --system --no-create-home --group cql-metrics-collector
        ;;
    abort-upgrade|abort-remove|abort-deconfigure)
        ;;
    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
